@model Drink

<div class="col-sm-4">
    <div class="card div-thumbnail">
        <img src="~/@Model.ImageThumbnailUrl" class="img-thumbnailUrl" alt="image of drink" />
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>@Model.Name</h3>
            <p id="caption-desc">@Model.ShortDescription</p>
        </div>
        <a asp-controller="Drink" asp-action="Details" asp-route-drinkId="@Model.DrinkId" class="stretched-link"></a>
        <div class="addToCart text-right">
            <p class="button ">
                <a class="btn btn-success" id="cartButton" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-drinkId="@Model.DrinkId">
                    Add to cart
                </a>
            </p>
        </div>
    </div>
</div>